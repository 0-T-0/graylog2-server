<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>graylog</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.parent.build.directory}/assembly</directory>
            <includes>
                <include>graylog-${project.version}-*.tar.gz</include>
            </includes>
            <outputDirectory>/</outputDirectory>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>src/main/docker/graylog.conf</source>
            <destName>graylog.conf</destName>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>src/main/docker/graylog-test</source>
            <fileMode>0755</fileMode>
            <destName>graylog-test</destName>
            <outputDirectory>bin</outputDirectory>
        </file>
    </files>
</assembly>