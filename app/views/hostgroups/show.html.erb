<% content_for :sidebar do %>
  <%= render :partial => "messages/sidebar_index" %>
<% end %>

<h1>Hostgroup <span class="highlighted"><%= @hostgroup.name %></span></h1>

<% if @messages.blank? %>
  No messages found.
<% else %>
  <%= render :partial => "messages/table", :locals => { :messages => @messages, :total_messages => @total_count } %>
<% end %>
