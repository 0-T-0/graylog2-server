<h1>Login</h1>

<% if has_users %>
  <%= form_tag session_path do -%>
      
    <%= text_field_tag 'login', "Username", :class => "login-credentials initial", "data-stdtext" => "Username" %>
    <%= password_field_tag 'password', "Password", :class => "login-credentials initial", "data-stdtext" => "Password" %>
    
    <%= check_box_tag 'remember_me', '1', @remember_me %>
    <%= label_tag 'remember_me', 'Remember me', :id => "remember-me" %>
    
    <%= submit_tag 'Start Graylog2', :id => "submit" %>
  
  <% end -%>
<% else %>
  Welcome to Graylog2! Click <%= link_to "here", :controller => "users", :action => "new" %> to create your first user.
<% end %>
